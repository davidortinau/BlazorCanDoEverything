@inherits LayoutComponentBase

<FluentDesignTheme @bind-Mode="@_themeMode" StorageName="todo-app-theme" />

<FluentLayout>
    <FluentHeader>
        <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center">
            <FluentIcon Value="@(new Icons.Regular.Size24.TaskListSquareLtr())" Color="Color.Accent" />
            <FluentLabel Typo="Typography.H4" MarginBlock="0" Style="color: white;">Todo App</FluentLabel>
        </FluentStack>
        <FluentSpacer />
        <FluentButton IconStart="@(_themeMode == DesignThemeModes.Dark ? new Icons.Regular.Size20.WeatherSunny() : new Icons.Regular.Size20.WeatherMoon())" 
                      Appearance="Appearance.Stealth"
                      OnClick="@ToggleTheme"
                      Title="@(_themeMode == DesignThemeModes.Dark ? "Switch to light mode" : "Switch to dark mode")" />
    </FluentHeader>

    <FluentStack Class="main-layout" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="content-area">
            <div style="padding: 1rem 1.5rem;">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>

<FluentToastProvider />
<FluentDialogProvider />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private DesignThemeModes _themeMode = DesignThemeModes.System;

    private void ToggleTheme()
    {
        _themeMode = _themeMode == DesignThemeModes.Dark 
            ? DesignThemeModes.Light 
            : DesignThemeModes.Dark;
    }
}
